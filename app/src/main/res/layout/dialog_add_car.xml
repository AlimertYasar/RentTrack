<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="10dp"
    android:layout_gravity="center">


    <!-- Başlık -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Araç Ekle"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Araç Markası -->
    <EditText
        android:id="@+id/etCarBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marka"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Araç Modeli -->
    <EditText
        android:id="@+id/etCarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Araç Plakası -->
    <EditText
        android:id="@+id/etCarPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plaka"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Add these to your dialog_add_car.xml -->
    <EditText
        android:id="@+id/etCarStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durum (Opsiyonel)"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etCarRenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kiracı (Opsiyonel)"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etCarPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Süre (Opsiyonel)"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etCarElapsedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Geçen Süre (Opsiyonel)"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>


    <!-- Araç Fotoğrafı Seç
    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fotoğraf Seç"
        android:layout_marginBottom="10dp"/>
-->
    <!-- Araç Ekle Butonu -->
    <Button
        android:id="@+id/btnAddCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Araç Ekle"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"/>
</LinearLayout>
